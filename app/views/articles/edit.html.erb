<h1>Editing article</h1>

<% form_for :article, @article, :url => reader_feed_article_path(@feed,@article), :html => {:method => :put} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :modified_at %><br />
    <%= f.datetime_select :modified_at %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :feed_id %><br />
    <%= f.text_field :feed_id %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', reader_feed_article_path(@feed,@article) %> |
<%= link_to 'Back', reader_feed_articles_path(@feed) %>
